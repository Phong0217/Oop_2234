                    <children>
                        <HBox prefHeight="43.0" prefWidth="592.0">
                            <children>
                                <TextField fx:id="searchField" onKeyReleased="#searchFieldAction" prefHeight="10.0" prefWidth="139.0" promptText="nhập từ cần dịch ...">
                                    <HBox.margin>

                                        <Insets left="10.0" right="10.0" top="20.0" />
                                    </HBox.margin>
                                </TextField>
                                <AnchorPane prefHeight="35.0" prefWidth="50.0">
